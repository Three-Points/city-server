{
    "name": "zentrity",
    "version": "0.2.0",
    "description": "Server Architecture",
    "main": "src/index.ts",
    "scripts": {
        "format": "npx prettier --write .",
        "dev": "nodemon ./src/index",
        "test": "jest --silent",
        "prebuild": "rm -rf dist",
        "build": "tsc -p tsconfig.build.json",
        "start": "node src/index.js"
    },
    "dependencies": {
        "chalk": "4.1.2",
        "cors": "2.8.5",
        "dotenv": "10.0.0",
        "dotenv-expand": "5.1.0",
        "express": "4.17.1",
        "joi": "17.6.0",
        "module-alias": "2.2.2",
        "swagger-jsdoc": "6.2.1",
        "swagger-ui-express": "4.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "16.0.0",
        "@commitlint/config-conventional": "16.0.0",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jest": "27.0.3",
        "@types/node": "16.11.11",
        "@types/supertest": "2.0.11",
        "@types/swagger-jsdoc": "6.0.1",
        "@types/swagger-ui-express": "4.1.3",
        "husky": "7.0.4",
        "jest": "27.4.3",
        "nodemon": "2.0.16",
        "prettier": "2.5.1",
        "supertest": "6.1.6",
        "ts-jest": "27.1.0",
        "ts-node": "10.4.0",
        "typescript": "4.6.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Three-Points/city-server"
    },
    "keywords": [
        "NodeJS",
        "TypeScript",
        "ExpressJS"
    ],
    "author": "Emmanuel Rodr√≠guez <@roremDev>",
    "license": "MIT",
    "homepage": "https://[name].herokuapp.com/",
    "config": {
        "env": {
            "DOMAIN": "Domain of server",
            "MODE": "Mode of runtime",
            "PORT": "Connection port of server",
            "PG_SCOPE": "Environment variable for PostgreSQL",
            "MONGO_SCOPE": "Environment variable for MongoDB"
        },
        "directories": {
            "dist": "Boundle generated by Typescript",
            "debug": "Debug files scripts for Unit Tests",
            "project": "Files description project",
            "src/config": "Environment variables",
            "src/db": "Database files scope",
            "src/libs": "drivers connection directory",
            "src/routes": "Endpoints definition",
            "src/services": "controller directory",
            "src/middlewares": "express middlewares handlers",
            "src/utils": "other tools",
            "src/validators": "other tools",
            "test": "testing directory [ Jest, Supertest ]"
        }
    },
    "engines": {
        "node": ">=14.x"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "_moduleAliases": {
        "@src": "./src",
        "@config": "./src/config",
        "@controllers": "./src/controllers",
        "@db": "./src/db",
        "@libs": "./src/libs",
        "@middlewares": "./src/middlewares",
        "@models": "./src/models",
        "@routes": "./src/routes",
        "@services": "./src/services",
        "@utils": "./src/utils",
        "@validators": "./src/validators"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/dist/"
        ],
        "moduleNameMapper": {
            "@src/(.*)": "<rootDir>/src/$1",
            "@config/(.*)": "<rootDir>/src/config/$1",
            "@controllers/(.*)": "<rootDir>/src/controllers/$1",
            "@db/(.*)": "<rootDir>/src/db/$1",
            "@libs/(.*)": "<rootDir>/src/libs/$1",
            "@middlewares/(.*)": "<rootDir>/src/middlewares/$1",
            "@models/(.*)": "<rootDir>/src/models/$1",
            "@routes/(.*)": "<rootDir>/src/routes/$1",
            "@services/(.*)": "<rootDir>/src/services/$1",
            "@utils/(.*)": "<rootDir>/src/utils/$1",
            "@validators/(.*)": "<rootDir>/src/validators/$1"
        }
    }
}
